<style>
    .colombia-hero-section {
        background: linear-gradient(135deg, #1a2a6c, #b21f1f, #fdbb2d);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .colombia-hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.4);
        pointer-events: none;
    }

    .logo-title-container {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .colombia-hero-logo {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 4px solid rgba(255,255,255,0.2);
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        transition: all 0.5s ease;
    }

    .logo-title-container:hover .colombia-hero-logo {
        transform: rotate(360deg) scale(1.1);
        border-color: rgba(255,255,255,0.5);
    }

    .logo-title-container h1 {
        font-size: 2.5rem;
        background: linear-gradient(to right, #ffffff, #e0e0e0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        transition: all 0.5s ease;
    }

    .logo-title-container:hover h1 {
        transform: translateX(10px);
    }

    .colombia-hero-content p {
        max-width: 600px;
        line-height: 1.6;
        letter-spacing: 0.5px;
    }

    .colombia-hero-image-container {
        position: relative;
        perspective: 1000px;
        transition: all 0.7s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .colombia-hero-image {
        transition: all 0.7s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        transform: rotateY(-10deg) scale(0.9);
        opacity: 0.8;
        box-shadow: 0 25px 50px rgba(0,0,0,0.3);
    }

    .colombia-hero-image-container:hover .colombia-hero-image {
        transform: rotateY(0) scale(1.05);
        opacity: 1;
        box-shadow: 0 35px 60px rgba(0,0,0,0.4);
    }

    .colombia-btn-explore {
        position: relative;
        background-color: #fff;
        color: #3494E6;
        border: none;
        overflow: hidden;
        z-index: 1;
    }

        .colombia-btn-explore::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: all 0.6s;
            z-index: -1;
        }

        .colombia-btn-explore:hover::before {
            left: 100%;
        }

        .colombia-btn-explore:hover {
            transform: translateY(-7px);
            box-shadow: 0 15px 25px rgba(0,0,0,0.2);
        }


    /* Services Section */
    .colombia-service-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .colombia-service-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .colombia-service-icon {
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .colombia-service-card:hover .colombia-service-icon {
        opacity: 1;
        transform: scale(1.1);
    }

    /* Destinations Section */
    .colombia-destination-card {
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .colombia-destination-card img {
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .colombia-destination-card:hover img {
            transform: scale(1.1);
        }

    /* Testimonials Section */
    .colombia-testimonial-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .colombia-testimonial-card:hover {
            transform: translateY(-10px);
        }

    .colombia-testimonial-avatar {
        border: 4px solid #3494E6;
    }

    /* CTA Section */
    .colombia-cta {
        background: linear-gradient(135deg, #3494E6, #EC6EAD);
        color: white;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }
</style>

